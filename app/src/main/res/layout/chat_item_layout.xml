<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_marginRight="50dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/ln1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView

            android:layout_gravity="left"
            android:visibility="gone"
            android:id="@+id/message_receiveTv"
            android:textSize="16sp"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/send_chat_item"
            android:text="asdfasdf"

            />
        <ImageView
            android:layout_gravity="left"
            android:visibility="gone"
            android:id="@+id/receiveImageView"
            android:src="@drawable/sun2"
            android:layout_width="300dp"
            android:layout_height="350dp"

            />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_below="@+id/ln1"
        android:layout_marginLeft="10dp"
        android:id="@+id/message_receive_TimeTv"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="asdfasdf"

        />
    <LinearLayout
        android:layout_below="@+id/ln1"
        android:layout_marginLeft="50dp"
        android:layout_alignParentRight="true"
        android:id="@+id/ln2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="right"
            android:visibility="gone"
            android:id="@+id/message_sentTv"
            android:textSize="16sp"
            android:textColor="#fff"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/receive_chat_item"
            android:text="asdfasdf"

            />
        <ImageView
            android:layout_gravity="right"
            android:visibility="gone"
            android:id="@+id/sentImageView"
            android:src="@drawable/sun2"
            android:layout_width="300dp"
            android:layout_height="350dp"

            />
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:layout_below="@+id/ln2"
        android:layout_marginLeft="10dp"
        android:id="@+id/message_SentTimeTv"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="asdfasdf"

        />

</RelativeLayout>