<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ForgetPasswordActivity">

    <include
        layout="@layout/app_ber_layout2"
        android:id="@+id/appBarId"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone number or email"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/f_emailEditTextId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Type Phone Or Email"
                        android:textStyle="bold"
                        android:padding="15dp" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Memonic"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/f_memonicCodeEt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Memonic"
                        android:textStyle="bold"
                        android:padding="15dp" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New Password"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/f_newPasswordEdittextId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Type Your New Password"
                        android:textStyle="bold"
                        android:padding="15dp" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm New Password"
                    android:textColor="#000"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="textPassword"
                        android:id="@+id/f_confirmNewPasswordEdittextId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:fontFamily="@font/roboto_bold"
                        android:hint="Confirm New Password"
                        android:textStyle="bold"
                        android:padding="15dp" />
                </androidx.cardview.widget.CardView>

                <Button

                    android:minWidth="120dp"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#00C972"
                    android:background="@drawable/button_bg3"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forget Password"
                    android:layout_marginTop="15dp"
                    android:id="@+id/f_forgetPasswordButton"

                    />


            </LinearLayout>



        </ScrollView>

</LinearLayout>