<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    android:layout_height="wrap_content">
<RelativeLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/membershipIconImageViewid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/membershipIconImageViewid"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/i_membershipNameTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="VIP 3 : 300USD"
            android:textColor="#000"

            />
        <TextView
            android:id="@+id/i_numOfJobsTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number Of Jobs Per Day: 4"
            />
        <TextView
            android:id="@+id/i_monthlyIncomeTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monthly Income: 457889USD"

            />
        <TextView
            android:id="@+id/i_validityPeriodTvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Validity Period Day : 7024"

            />



    </LinearLayout>



</RelativeLayout>


</androidx.cardview.widget.CardView>