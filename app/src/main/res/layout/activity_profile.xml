<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <include
        android:id="@+id/appBarId"
        layout="@layout/app_ber_layout2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/p_emailTvId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sohel@gmail.com"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/p_nameTvId"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Md Sohrab Hossain"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/p_userIdTv"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="457889"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/p_balanceTvID"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance: 457889"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/p_totalRevenueTvId"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Revenue: 457889"
                android:textSize="18sp"
                android:textColor="#000"
                />
           <TextView
                android:id="@+id/p_taskRevenueId"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Revenue: 457889"
                android:textSize="18sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/p_referCodeTvId"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Refer Code: 457889"
                android:textSize="18sp"
                android:textColor="#000"
                />



        </LinearLayout>


    </ScrollView>


</LinearLayout>