<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#000"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registered"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name*"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />

        <EditText


            android:background="#fff"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/r_fullNameEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:hint="Type Your Name"
            android:textStyle="bold"
            android:padding="15dp" />
        <TextView
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number Or Email"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />

        <EditText
           android:background="#fff"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
             android:id="@+id/r_phoneEditTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:hint="Type your email or phone"
            android:textStyle="bold"
            android:padding="15dp" />
        <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 Digit Code*"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        />

        <EditText
            android:background="#fff"

            android:id="@+id/r_4digitCodeEtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_bold"
            android:hint="Type Your 4 Digit Code"
            android:inputType="number"
            android:padding="15dp"
            android:textStyle="bold" />  <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password*"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        />

        <EditText
           android:background="#fff"

            android:id="@+id/r_passwordEdittextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_bold"
            android:hint="Type Your Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textStyle="bold" /> <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password*"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        />

        <EditText
             android:background="#fff"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:inputType="textPassword"
            android:id="@+id/r_confirmPasswordEdittextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:hint="Retype Your Password"
            android:textStyle="bold"
            android:padding="15dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Invite Code"
            android:textSize="18sp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            />

        <EditText
            android:background="#fff"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/r_InviteCodeEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:hint="2021"
            android:textStyle="bold"
            android:padding="15dp" />

        <Button

            android:minWidth="120dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:background="@drawable/button_bg"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:layout_marginTop="15dp"
            android:id="@+id/r_RegisterButton"

            />
        <TextView
            android:id="@+id/r_loginLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Already Have An Account?Sign in"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>
</ScrollView>