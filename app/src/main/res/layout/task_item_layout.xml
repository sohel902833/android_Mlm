<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/icon_imageViewId"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/facebook" />

        <TextView
            android:id="@+id/task_typeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon_imageViewId"
            android:text="Facebook"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/task_typeTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/task_typeTV"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-2dp"
            android:layout_toRightOf="@+id/icon_imageViewId"
            android:text="Facebook"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/taskId_TvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/text_round_bg"
            android:padding="5dp"
            android:text="asdfksdfsdf"
            android:textColor="#B8A645"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/task_amountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskId_TvId"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="15dp"
            android:padding="5dp"
            android:text="0.458"
            android:textColor="#AA7474"

            android:textSize="25sp"

            android:textStyle="bold" />

        <View
            android:id="@+id/viewId"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/task_amountTv"
            android:background="#000"

            />
          <RelativeLayout
              android:layout_marginTop="5dp"
             android:layout_below="@+id/viewId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/serial_idTV"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_marginRight="5dp"
                  android:padding="5dp"
                  android:text="0.458"
                  android:textColor="#000"
                  android:textSize="18sp"
                  android:textStyle="bold"

                  />

              <Button
                  android:id="@+id/receiveId"
                  android:layout_width="wrap_content"
                  android:layout_height="40dp"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="5dp"
                  android:background="#FF22"
                  android:padding="5dp"
                  android:text="Receive"
                  android:textAllCaps="false"
                  android:textColor="#fff"
                  android:textSize="16sp"


                  />

          </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>