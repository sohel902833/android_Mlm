<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragments.MemberFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/bg"
                android:scaleType="fitXY"
                />
            <androidx.cardview.widget.CardView
                android:layout_marginBottom="15dp"
                android:elevation="10dp"
                app:cardBackgroundColor="#F3A501"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="15dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/m_currentMembershipTvId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="VIP 3 : 300USD"
                        android:textColor="#fff"

                        />
                    <TextView
                        android:id="@+id/m_c_numOfJobsPerDayTvId"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number Of Jobs Per Day: 4"
                        />
                    <TextView
                        android:id="@+id/m_c_monthlyIncomeTvId"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly Income: 457889USD"

                        />
                    <TextView
                        android:id="@+id/validityPeriodDayTvId"
                        android:textColor="#fff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Validity Period Day : 7024"

                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/membershipListRecyclerViewid"
                />
        </LinearLayout>


    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:id="@+id/messageIconButton"
        android:layout_height="wrap_content"
        android:src="@drawable/message_icon"
        android:backgroundTint="#FF5722"
        android:tint="#fff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        />

</RelativeLayout>